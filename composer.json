{
    "name": "vkuberan/stripe-donate",
    "description": "A Simple Wordpress donation plugin using Stripe as its payment processor.",
    "type": "wordpress-plugin",
    "license": "GNU",
    "authors": [
        {
            "name": "Velmurugan Kuberan",
            "email": "vkuberan@gmail.com",
            "homepage": "https://github.com/vkuberan"
        }
    ],
    "support": {
        "src": "https://github.com/vkuberan/stripe-donate/",
        "issues": "https://github.com/vkuberan/stripe-donate/issues"
    },
    "require": {
        "php": ">=7.2",
        "brain/nonces": "1.0.*",
        "stripe/stripe-php": "7.91.0"
    },
    "require-dev": {
        "php": ">=7.2",
        "brain/monkey": "1.0.*",
        "wp-coding-standards/wpcs": "^2",
        "phpcompatibility/phpcompatibility-wp": "^2",
        "dg/composer-cleaner": "^2",
        "phpcompatibility/php-compatibility": "^9.1"
    },
    "autoload": {
        "psr-4": {
            "VeeKay\\StripeDonate\\": "src/"
        }
    },
    "scripts": {
        "post-install-cmd": [
          "@phpcs"
        ],
        "post-update-cmd": [
          "@phpcs"
        ],
        "phpcs": "./vendor/bin/phpcs --config-set installed_paths vendor/wp-coding-standards/wpcs,vendor/phpcompatibility/php-compatibility/PHPCompatibility,vendor/phpcompatibility/phpcompatibility-wp/PHPCompatibilityWP,vendor/phpcompatibility/phpcompatibility-paragonie/PHPCompatibilityParagonieRandomCompat,vendor/phpcompatibility/phpcompatibility-paragonie/PHPCompatibilityParagonieSodiumCompat"
    }
}
